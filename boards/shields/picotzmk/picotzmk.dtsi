#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/bt.h>


/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;

        interrupt-gpios = <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN) >;
        gpios
          = <&pro_micro 14 GPIO_ACTIVE_HIGH>
          , <&pro_micro 16 GPIO_ACTIVE_HIGH>
          , <&pro_micro 15 GPIO_ACTIVE_HIGH>
          , <&pro_micro 18 GPIO_ACTIVE_HIGH>
          , <&pro_micro 8 GPIO_ACTIVE_HIGH>
          , <&pro_micro 7 GPIO_ACTIVE_HIGH>
          , <&pro_micro 6 GPIO_ACTIVE_HIGH>
          ; // addressable space is 5x5, (minus paired values)
    };

    default_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <7>;
        columns = <7>;
    
        map = <
            RC(6,0) RC(5,0) RC(4,0) RC(3,0) RC(2,0) RC(1,0) RC(0,6) RC(1,6) RC(2,6) RC(3,6) RC(4,6) RC(5,6) 
            RC(5,1) RC(4,1) RC(3,1) RC(2,1) RC(0,1)                 RC(0,5) RC(1,5) RC(2,5) RC(3,5) RC(4,5) 
            RC(6,1) RC(4,2) RC(3,2) RC(1,2) RC(0,2)                 RC(0,4) RC(1,4) RC(2,4) RC(3,4) RC(6,5)
            RC(6,2) RC(5,2) RC(2,3) RC(1,3) RC(0,3)                 RC(6,3) RC(5,3) RC(4,3) RC(5,4) RC(6,4) 
        >;
    };
};